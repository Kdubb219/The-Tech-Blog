<!-- views/edit.handlebars -->

<div>
  <h1>Edit Blog Post</h1>

  <form action="/post/update/{{post.dataValues.id}}" method="post">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{post.dataValues.title}}" required><br>
    <label for="content">Content:</label>
    <textarea id="content" name="content" required>{{post.dataValues.content}}</textarea><br>
    <button type="submit">Update Post</button>
  </form>

  <a href="/dashboard">Back to Dashboard</a>
</div>